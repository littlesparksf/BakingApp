<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/fl_player_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Step Video" />

    <ImageButton
        android:id="@+id/btn_previous_step"
        android:contentDescription="Previous step button"
        app:srcCompat="@drawable/exo_controls_previous"
        android:backgroundTint="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_next_step"
        app:layout_constraintTop_toBottomOf="@id/fl_player_container"/>

    <ImageButton
        android:id="@+id/btn_next_step"
        android:contentDescription="Next step button"
        app:srcCompat="@drawable/exo_controls_next"
        android:backgroundTint="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_previous_step"
        app:layout_constraintTop_toBottomOf="@id/fl_player_container" />

</android.support.constraint.ConstraintLayout>